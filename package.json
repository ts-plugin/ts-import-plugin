{
  "name": "ts-import-plugin",
  "version": "1.6.1",
  "description": "babel-plugin-import TypeScript version",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "build": "rm -rf lib && tsc -p src/tsconfig.json",
    "cover": "rm -rf ./coverage ./.nyc_output && nyc --reporter=html --reporter=lcov --exclude=node_modules --exclude=test mocha && nyc report",
    "lint": "tslint -c ./tslint.json -p ./src/tsconfig.json",
    "prepare": "npm run build",
    "start": "rm -rf dist && NODE_ENV=production webpack",
    "test": "mocha",
    "watch": "tsc -p ./src/tsconfig.json -w --diagnostics",
    "postinstall": "opencollective-postinstall || true"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Brooooooklyn/ts-import-plugin.git"
  },
  "keywords": [
    "antd",
    "TypeScript",
    "plugin"
  ],
  "files": [
    "index.d.ts",
    "lib/"
  ],
  "author": "lynweklm@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.1.7",
    "@types/lodash": "^4.14.136",
    "@types/material-ui": "^0.21.6",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.2",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "antd": "^3.20.2",
    "chai": "^4.2.0",
    "coveralls": "^3.0.5",
    "css-loader": "^3.0.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "lodash": "^4.17.14",
    "material-ui": "^0.20.2",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rxjs": "^6.5.2",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.5.3",
    "webpack": "^4.35.3",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.5"
  },
  "dependencies": {
    "tslib": "^1.10.0",
    "opencollective-postinstall": "^2.0.2"
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always",
    "parser": "typescript"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint -c tslint.json -p tsconfig.json --fix -e \"**/test/expect/**\"",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "test/**/*.{js,ts}"
    ],
    "check-coverage": true
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/ts-import-plugin"
  }
}
